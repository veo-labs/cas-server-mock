{

  "env": {

    // Add browser environment globals
    "browser": true

  },
  "globals": {

    // Add angular to environment globals but do not authorize to overwrite it
    angular: false,

    // Enable ECMAScript 6 features
    "es6": false

  },
  "rules": {

    // Deactivate es6 validation
    "arrow-spacing": 0,
    "constructor-super": 0,
    "generator-star-spacing": 0,
    "no-class-assign": 0,
    "no-const-assign": 0,
    "no-dupe-class-members": 0,
    "no-new-symbol": 0,
    "no-useless-constructor": 0,
    "no-var": 0,
    "object-shorthand": 0,
    "prefer-arrow-callback": 0,
    "prefer-const": 0,
    "prefer-template": 0,
    "require-yield": 0,
    "template-curly-spacing": 0,
    "yield-star-spacing": 0

  }

}
